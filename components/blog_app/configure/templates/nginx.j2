server {
    listen 80;
    server_tokens off;

    location /admin {
        proxy_pass http://{{ groups['admin_app'][0] }};
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        break;
    }

    location ^~ / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;

#        if ($http_x_forwarded_proto != 'https') {
#            # Redirect http traffic to https ELB
#            rewrite ^ https://$host$request_uri? permanent;
#        } 

        proxy_pass http://localhost:{{ blog_app.port }};
    }
}
